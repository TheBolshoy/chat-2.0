{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["dom", "es6"],
    "target": "esnext", // или любой другой целевой стандарт
    "module": "esnext",
    "strict": true,
    "jsx": "preserve", // если вы используете React
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // если используете алиасы
    "paths": {
      "@/*": ["*"]
    }
  },
  // "include": ["src/"],
  "exclude": ["node_modules", "dist"]
}
